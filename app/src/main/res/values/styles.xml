<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/customButton</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="cancelButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/stop_button</item>
    </style>

    <style name="closeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/close_button</item>
    </style>
    <style name="settingButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/setting_button</item>
    </style>
    <style name="helpButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/help_button</item>
    </style>
    <style name="shareButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/share_button</item>
    </style>
    <style name="donateButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/donate_button</item>
    </style>
    <style name="homeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/home_button</item>
    </style>

</resources>
